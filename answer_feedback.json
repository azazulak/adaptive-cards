{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "body": [
        {
            "type": "Container",
            "style": "attention",
            "horizontalAlignment": "Left",
            "rtl": false,
            "bleed": true,
            "items": [
                {
                    "type": "TextBlock",
                    "text": "Feedback For This Answer",
                    "wrap": true,
                    "horizontalAlignment": "Center",
                    "style": "heading"
                }
            ]
        },
        {
            "type": "TextBlock",
            "size": "Medium",
            "text": "Please provide any specific feedback regarding the most recent answer you have received.",
            "wrap": true
        },
        {
            "type": "Input.Text",
            "placeholder": "Please enter your feedback here.",
            "isRequired": true,
            "id": "TextFeedback",
            "spacing": "Small",
            "isMultiline": true,
            "errorMessage": "You must input a response in the text box."
        }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "Submit",
            "style": "positive"
        }
    ]
}
