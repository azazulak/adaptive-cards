{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.4",
    "body": [
        {
            "type": "Container",
            "style": "warning",
            "bleed": true,
            "spacing": "None",
            "isVisible": false,
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": "40px",
                            "items": [
                                {
                                    "type": "Image",
                                    "url": "data:image/png;base64,",
                                    "height": "30px",
                                    "width": "30px"
                                }
                            ],
                            "verticalContentAlignment": "Center",
                            "horizontalAlignment": "Center"
                        },
                        {
                            "type": "Column",
                            "width": "stretch",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "This is **Staff Only** knowledge",
                                    "wrap": true,
                                    "size": "Large",
                                    "weight": "Bolder",
                                    "spacing": "None"
                                }
                            ],
                            "verticalContentAlignment": "Center"
                        }
                    ]
                }
            ]
        },
        {
            "type": "TextBlock",
            "text": "Topic.FinalAnswer",
            "wrap": true,
            "size": "Medium"
        },
        {
            "type": "TextBlock",
            "text": "Has this resolved your enquiry?",
            "separator": true,
            "wrap": true,
            "size": "Default",
            "horizontalAlignment": "Center"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "style": "good",
                    "width": "stretch",
                    "selectAction": {
                        "type": "Action.Submit",
                        "data": {
                            "actionSubmitId": "yes"
                        }
                    },
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Yes",
                            "horizontalAlignment": "Center",
                            "verticalContentAlignment": "center",
                            "size": "Large",
                            "weight": "Bolder",
                            "color": "Default"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "style": "attention",
                    "width": "stretch",
                    "selectAction": {
                        "type": "Action.ToggleVisibility",
                         "targetElements": [
                            {
                            "elementId": "reportActions"
                            }
                        ]
                    },
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "No",
                            "horizontalAlignment": "Center",
                            "verticalContentAlignment": "center",
                            "size": "Large",
                            "weight": "Bolder",
                            "color": "Default",
                            "height": "stretch"
                        }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "style": "attention",
            "id": "reportActions",
            "isVisible": false,
            "spacing": "None",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "The answer was...",
                    "spacing": "Small",
                    "horizontalAlignment": "Center",
                    "fontType": "Default",
                    "size": "Medium",
                    "weight": "Bolder",
                    "color": "Dark",
                    "isSubtle": false
                },
                {
                    "type": "ActionSet",
                    "horizontalAlignment": "Center",
                    "actions": [
                        {
                            "type": "Action.Submit",
                            "title": "Irrelevant"
                        },
                        {
                            "type": "Action.Submit",
                            "title": "Inaccurate"
                        },
                        {
                            "type": "Action.Submit",
                            "title": "Both"
                        }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "style": "emphasis",
            "bleed": true,
            "separator": true,
            "selectAction": {
                "type": "Action.Submit",
                "data": {
                    "actionSubmitId": "cancel"
                }
            },
            "items": [
                {
                    "type": "TextBlock",
                    "text": "Select this field to disregard this interaction.",
                    "horizontalAlignment": "Center",
                    "verticalContentAlignment": "center",
                    "size": "Default",
                    "weight": "light",
                    "color": "Default",
                    "isSubtle": false,
                    "wrap": true
                }
            ]
        }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "Submit feedback on this specific Answer"
        }
    ]
}
